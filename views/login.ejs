<!DOCTYPE html>
<html>
    <%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <section class="home section" id="home">
        <div class="home_container container grid">
            <div class="container userCard">
                <h1>Login</h1>
                <form class="authCard" action="/login" method="post">
                    <input class="footer_input marginAuth" type="text" name="username" placeholder="Username" required>
                    <input class="footer_input marginAuth" type="password" name="password" placeholder="Password" required>
                    <button class="button marginAuth" type="submit">Login</button>
                </form>
                <p>Don't have an account?</p><a class="otherLink" href="/signup">Sign Up</a>
            </div>
    
            <div class="home_images">
                <img src="/img/home-img.png" alt="" class="home_img">
    
                <div class="home_triangle home_triangle-3"></div>
                <div class="home_triangle home_triangle-2"></div>
                <div class="home_triangle home_triangle-1"></div>
            </div>
        </div>
    </section> 
    
    <%- include('partials/footer') %>

                <%- include('partials/scripts') %>
</body>
</html>
